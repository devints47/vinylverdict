# =============================================================================
# VinylVerdict.FM - Environment Variables Template
# =============================================================================
# Copy this file to .env.local and fill in your actual values
# Never commit .env.local to version control!

# =============================================================================
# NEXT.JS CONFIGURATION
# =============================================================================
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_REDIRECT_URI=http://localhost:3000/callback

# =============================================================================
# SPOTIFY API CONFIGURATION
# =============================================================================
# Get these from: https://developer.spotify.com/dashboard
NEXT_PUBLIC_SPOTIFY_CLIENT_ID=your_spotify_client_id_here
SPOTIFY_CLIENT_SECRET=your_spotify_client_secret_here

# =============================================================================
# OPENAI API CONFIGURATION
# =============================================================================
# Get your API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here

# OpenAI Assistant IDs (create these in OpenAI Assistants playground)
# Music Snob Assistant
OPENAI_MUSIC_SNOB_ID=your_music_snob_assistant_id_here

# Taste Validator Assistant  
OPENAI_TASTE_VALIDATOR_ID=your_taste_validator_assistant_id_here

# Music Historian Assistant
OPENAI_HISTORIAN_ID=your_historian_assistant_id_here

# Armchair Therapist Assistant
OPENAI_ARMCHAIR_THERAPIST_ID=your_armchair_therapist_assistant_id_here

# =============================================================================
# VERCEL BLOB STORAGE (for image uploads)
# =============================================================================
# Get this from your Vercel dashboard under Storage
BLOB_READ_WRITE_TOKEN=your_vercel_blob_token_here

# =============================================================================
# EMAIL CONFIGURATION (Optional - for sending verdict emails)
# =============================================================================
# If you want to enable email functionality, add your email service config
# EMAIL_SERVICE_API_KEY=your_email_service_key_here
# EMAIL_FROM_ADDRESS=noreply@vinylverdict.fm

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
# Generate a random string for session security
NEXTAUTH_SECRET=your_random_secret_string_here

# =============================================================================
# DEVELOPMENT FLAGS
# =============================================================================
# Set to development for local development
NODE_ENV=development

# Enable debug logging (optional)
# DEBUG=true 